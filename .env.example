# Copy this file to .env and update the values

# Cloudflare API Token (required, with DNS edit permissions)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# The old IP address to replace (optional)
OLD_IP=0.0.0.0
# The new IP address to set for A records
NEW_IP=1.2.3.4

# Set to 'true' to simulate changes without updating DNS
DRY_RUN=true
# Set to 'true' to enable debug logging
DEBUG=false

# Set to a domain (e.g. example.com) to update only that zone (optional)
TARGET_DOMAIN=

